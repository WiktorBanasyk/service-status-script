import os
import time

MONITOR_DIR = "/home/user"
last_checked_files = set(os.listdir(MONITOR_DIR))

while True:
    current_files = set(os.listdir(MONITOR_DIR))
    new_files = current_files - last_checked_files

    for filename in new_files:
        print(f"Utworzono plik {filename} w {MONITOR_DIR}")

    last_checked_files = current_files
    time.sleep(1)
